<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_input_nama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.ExplicitActivity">

    <TextView
        android:id="@+id/tv_inputNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Nama Anda"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ed_inputNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Input Name"
        android:inputType="text" />

    <TextView
        android:id="@+id/tv_inputInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Asal Instansi"
        android:textSize="20sp" />
s
    <EditText
        android:id="@+id/ed_inputInstansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Input Instansi"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="postTanpaData"
        android:text="KIRIM TANPA DATA"
        app:cornerRadius="7dp" />

    <Button
        android:id="@+id/btn_nodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="postData"
        android:text="KIRIM DATA"
        app:cornerRadius="7dp" />
</LinearLayout>